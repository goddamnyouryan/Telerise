<% title "Edit Video" %>

<h2>Edit Your Video</h2>

<%= form_for @video do |f| %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :style => "height:60px; width:217px;" %>
  </p>
  <p><%= f.submit "Update Video", :class => "button" %></p>
<% end %>

<%= raw(@video.embed) %>