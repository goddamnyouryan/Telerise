<% if current_user %>

	<% if current_user.voted_for?(@video) %>
	
		<%= link_to 'Vote Up', video_remove_vote_up_path(:video_id => @video.id), :style => 'color:orange;', :remote => true %>
		<%= link_to 'Vote Down', video_reverse_vote_up_path(:video_id => @video.id), :remote => true  %>
	
	<% elsif current_user.voted_against?(@video) %>
	
		<%= link_to 'Vote Up', video_reverse_vote_down_path(:video_id => @video.id), :remote => true  %>
		<%= link_to 'Vote Down', video_remove_vote_down_path(:video_id => @video.id), :style => 'color:orange;', :remote => true   %>
	
	<% else %>
	
		<%= link_to 'Vote Up', video_vote_up_path(:video_id => @video.id), :remote => true  %>
		<%= link_to 'Vote Down', video_vote_down_path(:video_id => @video.id), :remote => true  %>
		
	<% end %>

<% else %>

	<%= link_to 'Vote Up', video_new_session_path %>
	<%= link_to 'Vote Down', video_new_session_path  %>

<% end %>

<p>
	Upvotes: <%= @video.votes_up %><br />
	Downvotes: <%= @video.votes_down %><br />
	Total Votes: <%= @video.votes_up + @video.votes_down %><br />
	Vote Score: <%= @video.votes_up - @video.votes_down %>
</p>